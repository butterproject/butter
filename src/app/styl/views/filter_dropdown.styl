.filter-dropdown
  position relative
  display inline-block
  vertical-align middle
  color $FilterDropdownText
  text-align left
  width auto
  margin 0 0 0 10px
  border-radius 5px 5px 0 0
  transition background 0.3s ease
  .category
    font-family $MainFontBold
    font-size 0.88em
    line-height 0.88em
    opacity 0.25
    margin 0
    padding 0
    text-transform uppercase
  .select-item
    cursor pointer
  .selected
    margin 0
    padding 0
    line-height 1.25em
    font-size 1.25em
    min-width 75px
  .icon
    opacity 0.5
    font-size 1.25em
    margin-left 10px
    &:after
      content "arrow_drop_down"
  &.open
    .icon
      &:after
        content "arrow_drop_up"
    &.
      .drop-head
        background $FilterDropdownBg
        box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
    .filter-items
      background $FilterDropdownBg
      max-height 283px
      overflow-x hidden
      overflow-y auto
      -webkit-transform perspective(400) rotate3d(1, 0, 0, 0)
      li
        opacity 0.75
        &:hover
          background $FilterDropdownHover
          opacity 1
          cursor pointer
  .filter-items
    position absolute
    display inline-block
    vertical-align top
    max-height 0
    width 100%
    border-radius 0 0 5px 5px
    overflow hidden
    box-shadow 0 19px 38px rgba(0,0,0,0.30), 0 15px 12px rgba(0,0,0,0.22)
    -webkit-transform perspective(400) rotate3d(1, 0, 0, -90deg)
    -webkit-transform-origin 50% 0
    transition max-height 0.2s cubic-bezier(0.68, -0.55, 0.265, 1.55), background 0.3s ease
    li
      list-style none
      font-size 1.18em
      opacity 0
      padding 7px 13px
      display block
      transition opacity 0.15s ease
      &.open
        display none
      &:last-child
        border-bottom-right-radius 5px
        border-bottom-left-radius 5px
      &.select
        background #ddd
        opacity 1
  &.settings
    &.open
      border-radius 3px 3px 0 0
      .drop-head
        border-top 2px solid transparent
        border-bottom 1px solid rgba(255, 23, 68, 0.25)
        border-left 2px solid transparent
        border-right 2px solid transparent
        border-radius 3px 3px 0 0
        i
          opacity 1
      .filter-items
        li
          &:hover
            background #EEE
          &.select
            background #FF1744
            color #fff
          &.open
            background #FF1744
            color #fff
            display block
            opacity 1
    .drop-head
      border 2px solid #FF1744
      color #FF1744
      border-radius 3px
      i
        color #FF1744
      .selected
        width 100px
    .filter-items
      li
        color #757575
        &:last-child
          border-radius 0 0 2px 2px

.filter-dropdown.open,
.search.open .search-input
  background $FilterDropdownBg
  color $FilterDropdownText

.filter-dropdown .selected,
.filter-dropdown .icon
  display inline-block
  vertical-align middle
  font-weight bold

.drop-head
  padding 5px 15px

.filter-items
    // Inertial scrolling for touch devices (mostly useless here)
    -webkit-overflow-scrolling touch

    &::-webkit-scrollbar
        width 5px

    &::-webkit-scrollbar-track
        background-color transparent
        border-radius 2px

    &::-webkit-scrollbar-thumb
        background-color $ScrollBarThumb
        border-radius 2px

        &:hover
            background-color: $ScrollBarThumbHover

    &::-webkit-resizer,
    &::-webkit-scrollbar-corner,
    &::-webkit-scrollbar-button,
    &::-webkit-scrollbar-track-piece
        display none
